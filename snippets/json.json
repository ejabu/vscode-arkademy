{
	"launch.json - Odoo Windows": {
        "prefix": "Odoo Windows",
		"body": [
			"// -- ------------------------------------",
			"// -- Perhatian",
			"// -- Khusus untuk Windows User : ",
			"// -- hasil dari Copy Path harus diganti dengan double-backslash \\\\\\\\",
			"// -- ------------------------------------",
			"{",
			"	\"version\": \"0.2.0\",",
			"	\"configurations\": [",
			"		{",
			"			\"name\": \"Run Odoo\",",
			"			\"type\": \"python\",",
			"			\"request\": \"launch\",",
			"			\"stopOnEntry\": false,",
			"			\"console\": \"integratedTerminal\",",
			"			\"pythonPath\": \"C:/Program Files (x86)/Odoo 12.0/python/python.exe\",",
			"			\"program\": \"C:/Program Files (x86)/Odoo 12.0/server/odoo-bin\",",
			"			\"args\": [",
			"				\"--config=D:\\\\\\\\training\\\\\\\\odoo.conf\",",
			"				// \"--database=tutor1,tutor2\",",
			"				// \"--update=nama_folder1,nama_folder2\"",
			"			]",
			"		}",
			"	]",
			"}"
		]
	},
	"launch.json - Odoo Linux": {
        "prefix": "Odoo Linux",
		"body": [
			"// -- ------------------------------------",
			"// -- Perhatian",
			"// -- Khusus untuk Linux User : ",
			"// -- hasil dari Copy Path tidak perlu diganti dengan double-backslash \\\\\\\\",
			"// -- ------------------------------------",
			"{",
			"	\"version\": \"0.2.0\",",
			"	\"configurations\": [",
			"		{",
			"			\"name\": \"Run Odoo\",",
			"			\"type\": \"python\",",
			"			\"request\": \"launch\",",
			"			\"stopOnEntry\": false,",
			"			\"console\": \"integratedTerminal\",",
			"			\"pythonPath\": \"/usr/bin/python3\", // cari dengan which python3",
			"			\"program\": \"/home/${1:<user_name>}/training/source/12.0/odoo-bin\",",
			"			\"args\": [",
			"				\"--config=/home/${1:<user_name>}/training/config/arkademy.conf\",",
			"				// \"--database=tutor1,tutor2\",",
			"				// \"--update=nama_folder1,nama_folder2\"",
			"			]",
			"		},",
			"	]",
			"}"
		]
	},
}
